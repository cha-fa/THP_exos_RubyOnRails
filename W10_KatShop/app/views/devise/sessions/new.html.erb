<div class="center-card">
<div class="container text-center my-4 items-align-center">
 <div class="flex-row flex-direction">
  <div class="col-lg-10 col-xl-9 mx-auto">
    <div class="card card-signin flex-row my-5">
      <div class="card-img-left2 d-none d-md-flex">
         <!-- Background image for card set in CSS! -->
        </div>
          <div class="card-body my-4">
            <h2>Connexion</h2>
                <p> Connectez pour acheter <br> les meilleures photos de chats! <p>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field my-4">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
              
                <div class="field">
                  <%= f.label :mot_de_passe %><br />
                  <%= f.password_field :password, autocomplete: "current-password" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :se_souvenir_de_moi %>
                  </div>
                <% end %>

                <div class="actions my-4">
                  <%= f.submit "Connexion", class:"btn btn-dark"%>
                </div>
              <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
   </div>
 </div>
 </div>